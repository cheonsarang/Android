<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <Button
        android:id="@+id/btn_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="여기를 누르면 TextView에 글씨가 들어감"/>



    <EditText
        android:id="@+id/edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="버튼을 누르면 여기의 글씨가 위로 이동됨"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#123"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/edit_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0이상의 숫자를 입력해주세요"/>
    <Button
        android:id="@+id/btn_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#123"
        android:layout_marginTop="30dp"/>
    <RadioButton
        android:id="@+id/rdo_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남"/>
    <RadioButton
        android:id="@+id/rdo_woman"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#123"
        android:layout_marginTop="30dp"/>
    <RadioGroup
        android:id="@+id/rdo_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아주나쁨"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="나쁨"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="보통"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="좋음"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아주좋음"/>





    </RadioGroup>

</LinearLayout>